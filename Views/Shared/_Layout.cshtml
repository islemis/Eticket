<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCinemaApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">MyCinemaApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Movie">Films</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Screening">Séances</a></li>
                  @if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" href="/TicketM">Réservations</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" href="/TicketM/MyTickets">Mes Réservations</a>
        </li>
    }
}

               
                    <li class="nav-item"><a class="nav-link" href="/Home/About">À propos</a></li>

                  
                </ul>
            </div>
        </div>
        <partial name="_Identity.cshtml" />
    </header>
    
   
        <div class="container">
            @RenderBody()
        </div>
    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 p-4 text-center">
        &copy; 2025 MyCinemaApp. Tous droits réservés.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>