@model Ticket.Models.Screening

@{
    ViewData["Title"] = "Réserver une place";
}

<h3>Réserver une place pour : @Model.Movie?.Title</h3>
<p><b>Date et heure :</b> @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</p>
<p><b>Prix :</b> @Model.Price Dt</p>

<form asp-action="Create" method="post">
    <input type="hidden" name="screeningId" value="@Model.Id" />

    <div class="mb-3">
        <label for="seatNumber" class="form-label">Numéro de siège :</label>
        <input type="number" class="form-control" id="seatNumber" name="seatNumber" min="1" max="50" required />
        <span asp-validation-for="SeatNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Confirmer la réservation</button>
</form>

<div class="mt-3">
    <a asp-controller="Screening" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
        Retour à la séance
    </a>
</div>
