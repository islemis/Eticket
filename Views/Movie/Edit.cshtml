@using Ticket.Models
@model Movie

@{
    ViewData["Title"] = "Modifier le film";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h4>Modifier un film</h4>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DurationMinutes"></label>
                <input asp-for="DurationMinutes" class="form-control" type="number" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProducerId">Producteur</label>
                <select asp-for="ProducerId" asp-items="ViewBag.Producers" class="form-control"></select>
            </div>

            <div class="form-group">
                <label>Acteurs</label>
                <select asp-for="Actors_Movies" asp-items="ViewBag.Actors" class="form-control" multiple></select>
            </div>

            <div class="form-group">
                <label>Séances</label>
                <select asp-for="Screenings" asp-items="ViewBag.Screenings" class="form-control" multiple></select>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Modifier</button>
                <a asp-action="Index" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>
