@using Ticket.Models
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Liste des films";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            + Ajouter un film
        </a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 mb-3">
            <div class="card shadow">
                <img src="@item.ImageURL" class="card-img-top" style="height: 300px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p><b>Durée :</b> @item.DurationMinutes minutes</p>
                    <p><b>Producteur :</b> @item.Producer?.Name</p>

                    <p>
                        <b>Acteurs :</b>
                        @if (item.Actors_Movies != null && item.Actors_Movies.Any())
                        {
                            @string.Join(", ",
                            item.Actors_Movies.Select(a => a.Actor.Name)
                                        )
                                        }
                        else
                        {
                            <span>Pas d'acteurs</span>
                        }
                    </p>
                </div>

                <div class="card-footer text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                        Détails
                    </a>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                            Modifier
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

