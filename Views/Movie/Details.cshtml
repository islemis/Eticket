@using Ticket.Models
@model Movie

@{
    ViewData["Title"] = "Détails du film";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h4>@Model.Title</h4>
            </div>

            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.ImageURL" class="img-fluid" alt="@Model.Title" />
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <p><b>Description :</b> @Model.Description</p>

                        <p><b>Durée :</b> @Model.DurationMinutes minutes</p>

                        <p>
                            <b>Producteur :</b>
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@Model.ProducerId">
                                @Model.Producer.Name
                            </a>
                        </p>

                        <p>
                            <b>Acteurs :</b>
                            <hr />
                            <div class="row">
                                @foreach (var actorMovie in Model.Actors_Movies)
                                {
                                    <div class="col-md-4 text-center mb-3">
                                        <br />
                                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actorMovie.ActorId">
                                            @actorMovie.Actor.Name
                                        </a>
                                    </div>
                                }
                            </div>
                        </p>

                        <p>
                            <b>Séances disponibles :</b>
                            <ul>
                                @foreach (var screening in Model.Screenings)
                                {
                                    <li>
                                        @screening.StartTime.ToString("dd/MM/yyyy HH:mm")
                                        – Prix: @screening.Price Dt

                                        <a class="btn btn-sm btn-primary ms-2"
                                           asp-controller="Screening"
                                           asp-action="Details"
                                           asp-route-id="@screening.Id">
                                            Voir
                                        </a>
                                    </li>
                                }
                            </ul>
                        </p>

                    </div>
                </div>
            </div>

         
        </div>
    </div>
</div>
